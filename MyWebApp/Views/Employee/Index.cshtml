@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<a href="@Url.Action("Create", "Employee")" class="btn btn-primary mb-3">Add New Employee</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmpId</td>
                <td>@emp.Name</td>
                <td>@emp.Salary.ToString("C")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Employee", new { id = emp.EmpId })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Employee", new { id = emp.EmpId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
